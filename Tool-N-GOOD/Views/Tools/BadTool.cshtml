@model IEnumerable<Tool_N_GOOD.Models.Tool>

@{
    ViewData["Title"] = "BadTool";
}

<h1>Bad Tool</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToolType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasurementType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measurement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToolType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasurementType.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ToolId" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ToolId" class="btn btn-outline-secondary">REMOVE TOOL</a>

            </td>
        </tr>
}
    </tbody>
</table>
